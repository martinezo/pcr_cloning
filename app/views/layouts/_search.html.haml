= simple_form_for url, ethod: :get, remote: true do
  = hidden_field_tag :direction, params[:direction]
  = hidden_field_tag :sort, params[:sort]
  .tbl-search
    .col-1
      = text_field_tag :search, '', :size => 23
    .col-2.t-cent
      = submit_tag_fa_button t('commands.search')
      = link_to_fa_button({url: url, text: t('commands.list_all'), icon: ''})
