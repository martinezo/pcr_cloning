#tbl-sign-in
  %h1= t('titles.sign_in')

= render partial: 'layouts/alert_notice'

.sp
.tbl-sign-in
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    #tbl-login
      .form-inputs
        = f.input :login, required: false, autofocus: true, input_html: {:size => 30}
        .sp
        = f.input :password, required: false, input_html: {:size => 30}
      %br
      .form-actions
        = submit_tag_fa_button t('commands.sign_in')
